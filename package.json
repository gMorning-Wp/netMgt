{
  "name": "netMgt",
  "version": "1.0.0",
  "scripts": {
    "serve": "cross-env NODE_ENV=development vite",
    "build": "cross-env NODE_ENV=production vite build",
    "lint": "eslint --fix \"src/**/*.{js,vue}\""
  },
  //pre-commit 的eslint的检测
  "husky":{
    "hooks":{
      "pre-commit":"lint-staged"
    }
  },
  "lint-staged":{
    "src/**/*.{js,vue}":[
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "element-plus": "^1.0.2-beta.33",
    "mockjs": "^1.1.0",
    "vue": "^3.0.5",
    "vue-router": "^4.0.4",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "prettier": "^1.19.1",
    "sass": "^1.32.8",
    "vite": "^2.0.5",
    "vite-plugin-mock": "^2.2.0"
  }
}
